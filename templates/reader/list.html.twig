<h1>Reader List</h1>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Books</th>
        <th>Actions</th>
    </tr>
    {% for reader in reader %}
        <tr>
            <td>{{ reader.id }}</td>
            <td>{{ reader.username }}</td>
            <td>
                <ul>
                    {% for book in reader.getbooks() %}
                        <li>{{ book.title }}</li>
                    {% endfor %}
                </ul>
            </td>
        <td><a href="{{ path('app_reader_edit', {'id': reader.id}) }}">edit</a>
        <a href="{{ path('app_reader_delete', {'id': reader.id}) }}">delete</a>
        <a href="{{ path('app_reader_show', {'id': reader.id}) }}">Show</a>
    </td>
        </tr>
    {% endfor %}
</table>
